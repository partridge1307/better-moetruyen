generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String?  @unique
  image         String?
  isFirstUpload Boolean  @default(true)
  manga         Manga[]
  createAt      DateTime @default(now())
}

model Manga {
  id          Int       @id @default(autoincrement())
  name        String
  author      String
  description String    @default("Không có mô tả")
  image       String
  tags        Tag[]
  chapter     Chapter[]
  creator     User      @relation(fields: [creatorId], references: [id])
  creatorId   String
  isPublished Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([name, creatorId])
}

model Tag {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String
  category    String
  manga       Manga[]
}

model Chapter {
  id        Int      @id @default(autoincrement())
  name      String?
  images    String[]
  manga     Manga    @relation(fields: [mangaId], references: [id])
  mangaId   Int
  createdAt DateTime @default(now())
}
